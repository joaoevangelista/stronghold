<%= form_for(@issue_type) do |f| %>
<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-xs-12 col-md-8">
        <div class="row">
          <div class="col-xs-12">
            <div class="form-group <%= @issue_type.errors[:name].empty? ? '' : 'has-error' %>">
              <%= f.label :name, class: 'control-label' %>
              <%= f.text_field :name, class: 'form-control' %>
              <% if @issue_type.errors[:name].any? %>
              <% @issue_type.errors[:name].each do |message| %>
              <span class="help-block"><%= message.capitalize %></span>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-4">
        <div class="row">
          <div class="col-xs-12">
            <div class="form-group <%= @issue_type.errors[:color].empty? ? '' : 'has-error' %>">
              <%= f.label :color, class: 'control-label' %>
              <%= f.color_field :color, class: 'form-control' %>
              <% if @issue_type.errors[:color].any? %>
              <% @issue_type.errors[:color].each do |message| %>
              <span class="help-block"><%= message.capitalize %></span>
              <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <button type="submit" class="btn btn-success">
          <span><i class="fa fa-fw fa-check"></i></span>
          <%= t('form.save') %>
        </button>
      </div>
    </div>
  </div>
</div>
<% end %>
