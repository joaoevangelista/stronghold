<% @achievements.each do |achievement| %>
<div class="row">
  <hr>
  <div class="col-xs-12">
    <div class="row">
      <div class="col-xs-12">
        <p class="lead text-center">
          <span>
            <i class="fa fa-trophy fa-3x"></i>
          </span>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <h3 class="text-center"><%= t("merits.badges.#{achievement.name}.name") %></h3>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 spaced">
        <p class="text-center"><%= t("merits.badges.#{achievement.name}.description") %></p>
      </div>
    </div>
  </div>
  <hr>
</div>
<% end %>
