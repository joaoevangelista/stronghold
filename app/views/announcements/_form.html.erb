<div class="row">
  <div class="col-xs-12 col-md-12">

    <%= form_for(@announcement) do |f| %>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group <%= @announcement.errors[:title].empty? ? '' : 'has-error' %>">
          <%= f.label :title, class: 'control-label' %>
          <%= f.text_field :title, class: ['form-control', 'input-lg'], placeholder: 'What this is about ?' %>
          <% if @announcement.errors[:title].any? %>
          <% @announcement.errors[:title].each do |message| %>
          <span class="help-block"><%= message.capitalize %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group <%= @announcement.errors[:description].empty? ? '' : 'has-error' %>">
          <%= f.label :description, t('announcement.description_label'), class: 'control-label' %>
          <%= f.text_area :description, class: 'form-control', placeholder: 'Body of announcement', rows: 12 %>
          <% if @announcement.errors[:description].any? %>
          <% @announcement.errors[:description].each do |message| %>
          <span class="help-block"><%= message.capitalize %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.check_box :notify %>
          <%= f.label :notify, t('announcement.notify_label'), class: 'control-label' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= f.hidden_field :user_id %>
        <div class="actions">
          <button type="submit" class="btn btn-success">
            <span><i class="fa fa-fw fa-check"></i></span>
            <%= t('form.save') %>
          </button>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
