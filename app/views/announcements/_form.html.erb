<div class="row">
  <div class="col-xs-12 col-md-12">

    <%= form_for(@announcement) do |f| %>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.label :title, class: 'control-label' %>
          <%= f.text_field :title, class: ['form-control', 'input-lg'], placeholder: 'What this is about ?' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.label :description, 'Body', class: 'control-label' %>
          <%= f.text_area :description, class: 'form-control', placeholder: 'Body of announcement', rows: 12 %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= f.check_box :notify %>
          <%= f.label :notify, 'Notify people about this ?', class: 'control-label' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= f.hidden_field :user %>
        <div class="actions">
          <button type="submit" class="btn btn-success">
            <span><i class="fa fa-fw fa-check"></i></span>
             Save
          </button>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
