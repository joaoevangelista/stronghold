<div class="row">
  <div class="col-xs-12">
    <%= form_for(@event) do |f| %>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form-group <%= @event.errors[:title].empty? ? '' : 'has-error' %>">
          <%= f.label :title, class: 'control-label' %>
          <%= f.text_field :title, class: 'form-control',
          placeholder: t('event.placeholders.title') %>
          <% if not @event.errors[:title].empty? %>
          <% @event.errors[:title].each do |message| %>
          <span class="help-block"><%= message.capitalize %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form-group <%= @event.errors[:description].empty? ? '' : 'has-error' %>">
          <%= f.label :description, class: 'control-label' %>
          <%= f.text_area :description, class: 'form-control', rows: 6,
          placeholder: t('event.placeholders.description') %>
          <% if not @event.errors[:description].empty? %>
          <% @event.errors[:description].each do |message| %>
          <span class="help-block"><%= message.capitalize %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form-group <%= @event.errors[:time].empty? ? '' : 'has-error' %>">
          <%= f.label :time, class: 'control-label' %><br>
          <%= f.text_field :time, value: @event.time.try{|t| t.strftime('%d/%m/%Y %H:%M')},
           class: 'form-control datetime',
           autocomplete: 'off' %>
          <% if not @event.errors[:time].empty? %>
          <% @event.errors[:time].each do |message| %>
          <span class="help-block"><%= message.capitalize %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="actions">
          <%= f.hidden_field :user_id %>
          <%= f.submit class: 'btn btn-success btn-xs-block' %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
