<div class="row">
  <div class="col-xs-12">
    <%= form_for(@event) do |f| %>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form-group <%= @event.errors[:title].empty? ? '' : 'has-error' %>">
          <%= f.label :title, class: 'control-label' %>
          <%= f.text_field :title, class: 'form-control',
          placeholder: 'Set a title about the event' %>
          <% if not @event.errors[:title].empty? %>
          <% @event.errors[:title].each do |message| %>
          <span class="help-block"><%= message.capitalize %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form-group <%= @event.errors[:description].empty? ? '' : 'has-error' %>">
          <%= f.label :description, class: 'control-label' %>
          <%= f.text_area :description, class: 'form-control', rows: 6,
          placeholder: 'Tell more about the event' %>
          <% if not @event.errors[:description].empty? %>
          <% @event.errors[:description].each do |message| %>
          <span class="help-block"><%= message.capitalize %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="form-group <%= @event.errors[:time].empty? ? '' : 'has-error' %>">
          <%= f.label :time, class: 'control-label' %>
          <%= f.datetime_select :time, class: 'form-control' %>
          <% if not @event.errors[:time].empty? %>
          <% @event.errors[:time].each do |message| %>
          <span class="help-block"><%= message.capitalize %></span>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <div class="actions">
          <%= f.hidden_field :user_id %>
          <button class="btn btn-success" type="submit">
            <i class="fa fa-fw fa-check"></i> <%= t('form.save') %>
          </button>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
