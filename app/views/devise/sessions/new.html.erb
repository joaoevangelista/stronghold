<div class="container spaced">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="text-center"><%= t('user.sign_in') %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6 col-md-offset-3 ">

      <% if flash[:alert] %>
      <p class="text-danger text-center"><%= flash[:alert] %></p>
      <% end %>


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group <%= flash[:alert] ? 'has-error' : ''%>">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-fw fa-envelope-o"></i>
          </span>
          <%= f.email_field :email, autofocus: true, placeholder: t('user.placeholders.email'), class: 'form-control' %>
        </div>
      </div>

      <div class="form-group <%= flash[:alert] ? 'has-error' : ''%>">
        <div class="input-group">
          <span class="input-group-addon">
            <i class="fa fa-fw fa-lock"></i>
          </span>
          <%= f.password_field :password, autocomplete: "off", placeholder: t('user.placeholders.password'), class: 'form-control' %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t('user.remember_me') %>
      </div>
      <% end %>

      <div class="form-group">
        <%= f.submit t('user.sign_in'), class: ['btn','btn-xs-block' ,'btn-success'] %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
