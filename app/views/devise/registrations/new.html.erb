<div class="container spaced">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <div class="col-md-12">
        <h2 class="text-center">Sign up a new user</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <% if not devise_error_messages!.empty? %>
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= devise_error_messages! %>
        </div>
        <% end %>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :email, class: 'control-label' %>
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :name, class: 'control-label' %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="form-group">
            <%= label_tag :role, t('user.roles.label') , class: 'control-label' %>
            <%= select_tag :role, options_for_select(@roles) ,class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password, class: 'control-label' %>
              <% if @minimum_password_length %>
              <em class="text-info">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <%= f.label :password_confirmation, class: "control-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.submit "Sign up", class: ['btn', 'btn-success'] %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
