<div class="container">
  <div class="row">
    <div class="col-xs-12 hidden-xs">
      <div class="pull-left">
        <%= go_back_link issues_path %>
      </div>
      <div class="pull-right">
        <%= link_to icon('eye', t('links.show'), class: 'fa-fw'), @issue,  class: ['btn','btn-sm','btn-default'] %>
        <%= delete_link icon('trash', t('links.delete'), class: 'fa-fw'), @issue, class: ['btn','btn-sm','btn-danger'] %>
      </div>
    </div>
    <div class="col-xs-12 visible-xs">
      <div class="pull-right">
        <div class="dropdown">
          <button class="btn btn-sm btn-info dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <span><i class="fa fa-cog"></i></span>
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
            <li><%= link_to t('links.back'), issues_path %></li>
            <li><%= link_to t('links.show'), @issue %> </li>
            <li class="divider"></li>
            <li><%= delete_link t('links.delete'), @issue %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <h1 class="text-center"><%= t('issue.edit_title') %></h1>
    </div>
  </div>
  <section class="form">
    <%= render 'form' %>
  </section>
</div>
